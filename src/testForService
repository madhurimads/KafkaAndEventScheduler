public class FileContentUtils {

    private static final String DOC_FORMAT = "doc";
    private static final String DOCX_FORMAT = "docx";
    private static final String XLS_FORMAT = "xls";
    private static final String XLSX_FORMAT = "xlsx";
    private static final String TXT_FORMAT = "txt";
    private static final String PNG_FORMAT = "png";
    private static final String PDF_FORMAT = "pdf";
    private static final String JPG_FORMAT = "jpg";
    private static final String JPEG_FORMAT = "jpeg";

    private static final String DOC_CONTENT_TYPE = "application/doc";
    private static final String DOCX_CONTENT_TYPE = "application/docx";
    private static final String XLS_CONTENT_TYPE = "application/xls";
    private static final String XLSX_CONTENT_TYPE = "application/xlsx";
    private static final String TXT_CONTENT_TYPE = "text/plain";
    private static final String PNG_CONTENT_TYPE = "image/png";
    private static final String PDF_CONTENT_TYPE = "application/pdf";
    private static final String JPG_CONTENT_TYPE = "image/jpg";
    private static final String JPEG_CONTENT_TYPE = "image/jpeg";

    public static String getHtmlContentType(String fileFormat) {
        String contentType;
        switch (fileFormat.toLowerCase()) {

        case DOC_FORMAT:
            contentType = DOC_CONTENT_TYPE;
            break;
        case DOCX_FORMAT:
            contentType = DOCX_CONTENT_TYPE;
            break;
        case XLS_FORMAT:
            contentType = XLS_CONTENT_TYPE;
            break;
        case XLSX_FORMAT:
            contentType = XLSX_CONTENT_TYPE;
            break;
        case TXT_FORMAT:
            contentType = TXT_CONTENT_TYPE;
            break;
        case JPG_FORMAT:
            contentType = JPG_CONTENT_TYPE;
            break;
        case JPEG_FORMAT:
            contentType = JPEG_CONTENT_TYPE;
            break;
        case PNG_FORMAT:
            contentType = PNG_CONTENT_TYPE;
            break;
        case PDF_FORMAT:
            contentType = PDF_CONTENT_TYPE;
            break;
        default:
            contentType = TXT_CONTENT_TYPE;
        }

        return contentType;

    }

}
